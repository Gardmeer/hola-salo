<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HelloS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryVariant">@color/celeste</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#314095</item>
        <item name="colorSecondaryVariant">#536DFE</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HelloS" parent="Base.Theme.HelloS" />

    <style name="SplashTheme" parent="Base.Theme.HelloS">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Theme.HelloS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelloS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>