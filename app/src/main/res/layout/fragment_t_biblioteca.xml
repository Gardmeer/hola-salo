<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TBibliotecaFragment"
    android:background="@color/midnight">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/midnight">

        <ImageView
            android:id="@+id/imvBiblioteca"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tlibrary"
            android:contentDescription="@string/library"/>

        <TextView
            android:id="@+id/txtBiblio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imvBiblioteca"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tut_library"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>